# Docker / deployment database (Postgres)
# For Docker Compose use host "db". For local Postgres use "localhost".
DATABASE_URL=postgresql+psycopg2://user:password@db:5432/news_db

# Optional: DB wait (used by docker entrypoints)
DB_WAIT_RETRIES=30
DB_WAIT_DELAY_SECONDS=1

# Scraping Configuration
SCRAPE_INTERVAL_HOURS=1
MAX_ARTICLES_PER_SCRAPE=50
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# CNBC Indonesia URLs (Market section only)
# Pagination format: /market/indeks/5?page=2, ?page=3, etc.
CNBC_BASE_URL=https://www.cnbcindonesia.com
CNBC_MARKET_URL=https://www.cnbcindonesia.com/market/indeks/5

# Sentiment Analysis
SENTIMENT_MODEL=indobenchmark/indobert-base-p1
SENTIMENT_BATCH_SIZE=8
SENTIMENT_MAX_LENGTH=512

# Screening Criteria
MIN_SENTIMENT_SCORE=0.3
MIN_ARTICLES_FOR_SIGNAL=3
SIGNAL_TIMEFRAME_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

