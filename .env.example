# Database
DATABASE_PATH=data/cnbc_news.db

# Scraping Configuration
SCRAPE_INTERVAL_HOURS=1
MAX_ARTICLES_PER_SCRAPE=50
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# CNBC Indonesia URLs
CNBC_BASE_URL=https://www.cnbcindonesia.com
CNBC_MARKET_URL=https://www.cnbcindonesia.com/market
CNBC_INVESTMENT_URL=https://www.cnbcindonesia.com/investment

# Sentiment Analysis
SENTIMENT_MODEL=indobenchmark/indobert-base-p1
SENTIMENT_BATCH_SIZE=8
SENTIMENT_MAX_LENGTH=512

# Screening Criteria
MIN_SENTIMENT_SCORE=0.3
MIN_ARTICLES_FOR_SIGNAL=3
SIGNAL_TIMEFRAME_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log
